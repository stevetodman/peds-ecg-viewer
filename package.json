{
  "name": "peds-ecg-viewer",
  "version": "0.1.0",
  "description": "Pediatric ECG viewer with age-adjusted normal values",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:visual": "vitest --project visual",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ecg",
    "ekg",
    "electrocardiogram",
    "pediatric",
    "cardiology",
    "medical"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "canvas": "^3.2.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "jspdf": "^3.0.4",
    "pdf-lib": "^1.17.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
